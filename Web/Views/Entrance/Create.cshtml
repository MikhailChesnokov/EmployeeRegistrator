@model CreateEntranceForm

@{ ViewBag.Title = "Новый вход"; }

<h4>Новый вход в здание</h4>

<form method="post" id="entrance-form">

    <root-errors/>

    <input-group
        name="Name"
        label="Название"
        invalid-feedback="Некорректное название входа"
        placeholder="Введите название входа ..."
        value="@Model.Name"/>

    <select-group
        name="BuildingId"
        label="Здание"
        invalid-feedback="Здание не выбрано"
        placeholder="Выберите здание ..."
        items="@Model.Buildings"
        value="@Model.BuildingId"
        grouping="false"/>

    <button type="submit" class="btn btn-primary lower-button">Сохранить</button>
</form>