@model EditEmployeeForm

@{ ViewBag.Title = "Изменить сотрудника"; }

<h4>Изменить сотрудника</h4>

<form method="post">

    <root-errors/>

    <input type="hidden" name="Id" value="@Model.Id">

    <input-group
        name="FirstName"
        label="Имя"
        invalid-feedback="Некорректное имя сотрудника"
        value="@Model.FirstName"/>

    <input-group
        name="Surname"
        label="Фамилия"
        invalid-feedback="Некорректая фамилия сотрудника"
        value="@Model.Surname"/>

    <input-group
        name="Patronymic"
        label="Отчество"
        invalid-feedback="Некорректное отчество сотрудника"
        value="@Model.Patronymic"/>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>