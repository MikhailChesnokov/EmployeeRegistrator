@model EmployeeViewModel

@{ ViewBag.Title = "Сотрудник"; }

<h4>Сотрудник</h4>

<form>

    <view-group
        name="Surname"
        label="Фамилия"
        value="@Model.Surname"/>

    <view-group
        name="FirstName"
        label="Имя"
        value="@Model.FirstName"/>

    <view-group
        name="Patronymic"
        label="Отчество"
        value="@Model.Patronymic"/>

    <view-group
        name="PersonnelNumber"
        label="Табельный номер"
        value="@Model.PersonnelNumber"/>
    
    <view-group
        name="Department"
        label="Отдел"
        value="@Model.Department.Name"/>

    <view-group
        name="WorkplacePresenceRequired"
        label="Обязательно присутсвие на рабочем месте"
        value="@(Model.WorkplacePresenceRequired ? "Да" : "Нет")"/>

</form>


<form asp-action="Delete">
    <input type="hidden" name="Id" value="@Model.Id">

    <a class="btn btn-primary lower-button" href="@(Url.Action<EmployeeController>(c => c.Edit(Model.Id)))">Редактировать</a>

    <input type="submit" class="btn btn-primary lower-button" value="Удалить">
</form>